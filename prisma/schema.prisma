generator client {
  provider = "prisma-client-js"
  // output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model News {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        String   @default("")
  body        String   @default("")
  coverUrl    String?
  objectPosition String?       
  tags        Json
  published   Boolean  @default(true)
  publishedAt DateTime @default(now())
  sortAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sortAt]) 
}

model Event {
  id          String   @id @default(cuid())
  slug        String   @unique
  title       String
  date        String   @default("")
  body        String   @default("")
  coverUrl    String?
  objectPosition String?       
  tags        Json
  published   Boolean  @default(true)
  publishedAt DateTime @default(now())
  sortAt      DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([sortAt]) 
}


enum Role {
  ADMIN
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  role         Role     @default(ADMIN)
  name         String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
